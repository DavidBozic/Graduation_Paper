@page
@model EmailModel
@{
    ViewData["Title"] = "Izmena podataka";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="row">
    <div class="col-md-6 m-auto">
        <h2 class="mb-3">
            @ViewData["Title"]</h3>
            <partial name="_StatusMessage" for="StatusMessage" />
            <form id="email-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Input.NewUsername" class="form-label"></label>
                    <input asp-for="Input.NewUsername" class="form-control" autocomplete="new-password" placeholder="Unesite korisničko ime" aria-required="true" />
                    <span asp-validation-for="Input.NewUsername" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.NewEmail" class="form-label"></label>
                    <input asp-for="Input.NewEmail" class="form-control" autocomplete="new-password" placeholder="Unesite email adresu" aria-required="true" />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 mt-5">
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-outline-light">Potvrdi</button>
                </div>
            </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
