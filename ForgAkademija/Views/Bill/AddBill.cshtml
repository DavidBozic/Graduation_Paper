@using ForgAkademija.Models
@model Bill

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddBill" asp-controller="Bill" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="courseId" />
            <div class="form-group mb-2">
                <label asp-for="cardNumber" class="control-label"></label>
                <input asp-for="cardNumber" class="form-control" placeholder="Unesite broj kartice"/>
                <span asp-validation-for="cardNumber" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="cardValidityPeriod" class="control-label"></label>
                        <input asp-for="cardValidityPeriod" class="form-control" placeholder="Unesite rok važenja kartice"/>
                        <span asp-validation-for="cardValidityPeriod" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="cvcCode" class="control-label"></label>
                        <input asp-for="cvcCode" class="form-control" placeholder="Unesite cvc kod"/>
                        <span asp-validation-for="cvcCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-2 mt-5">
                <input type="submit" value="Potvrdi" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</environment>

<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</environment>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}