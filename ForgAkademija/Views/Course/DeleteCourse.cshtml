@model ForgAkademija.Models.Course

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <h5 class="d-flex justify-content-center">Da li ste sigurni da želite da obrišete kurs @Model.courseName?</h5>
        <form asp-action="DeleteCourse" class="d-flex justify-content-center">
            <input type="hidden" asp-for="courseId" />
            <input type="hidden" asp-for="courseName" />
            <input type="hidden" asp-for="coursePrice" />
            <input type="hidden" asp-for="courseDuration" />
            <input type="hidden" asp-for="videoLink" />
            <input type="hidden" asp-for="courseDescription" />
            <input type="hidden" asp-for="additionalMaterialUrl" />
            <input type="hidden" asp-for="logoUrl" />
            <input type="hidden" asp-for="creationTime" />
            <input type="hidden" asp-for="creatorId" />
            <div class="d-grid gap-2 mt-5">
                <input type="submit" value="Potvrdi" class="btn btn-outline-danger" /> &nbsp;
            </div>
        </form>
    </div>
</div>