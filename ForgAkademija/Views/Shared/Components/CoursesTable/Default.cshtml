@using ForgAkademija.ViewModel
@model IEnumerable<ForgAkademija.Models.Course>

<div class="row py-2">
    <div class="col text-start">
        <a onclick="ShowInModal('@Url.Action("AddCourse","Course",null,Context.Request.Scheme)', 'Novi kurs')" class="btn btn-outline-light light-btn"><i class="fa-solid fa-plus"></i> Dodaj kurs</a>
    </div>
</div>


<!-- Modal -->
<div class="modal" tabindex="-1" id="form-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-dark-blue">
            <div class="modal-header">
                <h3 class="modal-title"></h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>


<div class="row table-responsive">
    <table id="courseTable" class="display table table-bordered border-primary text-white border-0">
        <thead class="bg-soft-blue text-dark-blue">
            <tr>
                <th>Naziv kursa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <!-- Single course row -->
                <tr>
                    <td class="w-50">@Html.DisplayFor(modelItem => item.courseName)</td>
                    <td class="w-50">
                        <div class="row">
                            <div class="col-md-4 d-flex justify-content-center">
                                <a asp-action="CourseDetails" asp-controller="Course" asp-route-id="@item.courseId" class="btn btn-sm btn-outline-light"><i class="fa-solid fa-eye"></i> Detalji</a>
                            </div>
                            <div class="col-md-4 d-flex justify-content-center">
                                <a onclick="ShowInModal('@Url.Action("EditCourse","Course",new {id=item.courseId},Context.Request.Scheme)', 'Ažuriranje kursa')" class="btn btn-sm btn-outline-light"><i class="fa-solid fa-pen-to-square"></i> Izmeni</a>
                            </div>
                            <div class="col-md-4 d-flex justify-content-center">
                                <a onclick="ShowInModal('@Url.Action("DeleteCourse","Course",new {id=item.courseId},Context.Request.Scheme)', 'Brisanje kursa')" class="btn btn-sm btn-outline-light"><i class="fa-solid fa-trash"></i> Obriši</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>